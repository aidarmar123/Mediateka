<Window x:Class="Mediateka.Windows.AddCommentToExecutor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mediateka.Windows"
        Style="{StaticResource MaterialDesignWindow}"
        Icon="/Resourse/Icon128.ico"
        mc:Ignorable="d"
        Title="Добавить причину" MinHeight="150" MinWidth="300"
        MaxHeight="300" MaxWidth="600">
    <StackPanel VerticalAlignment="Center"
             Margin="10">
        <TextBlock Text="Добавить причину отказа"
                   FontWeight="Bold"
                FontSize="20"/>
        <TextBox Text="{Binding Comment}"
                 TextWrapping="Wrap"
                 Margin="0,10"
                 MaxLength="100" Cursor=""/>
        <Button x:Name="BSave"
             Margin="0, 10"
             Content="Сохранить"
             Click="BSave_Click"/>

    </StackPanel>
</Window>
