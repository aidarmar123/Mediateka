<Window x:Class="Mediateka.Windows.AddCommentEvent"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Mediateka.Windows"
        mc:Ignorable="d"
        Title="Добавить замечание к мероприятию" MinHeight="200" MinWidth="300"
        MaxHeight="300" MaxWidth="450">
    <StackPanel VerticalAlignment="Center">
        <TextBlock Text="Добавить комментарий"
                   FontSize="20"/>
        <TextBox Text="{Binding CommentModerator}"/>
        <Button x:Name="BSave"
                Content="Сохранить"
                Click="BSave_Click"/>
        
    </StackPanel>
</Window>
