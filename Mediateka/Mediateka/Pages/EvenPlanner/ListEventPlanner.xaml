<Page x:Class="Mediateka.Pages.ListEventPlanner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      xmlns:uc="clr-namespace:Mediateka.UsersControls"
      xmlns:local="clr-namespace:Mediateka.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ListEventPlanner"
      Loaded="Page_Loaded">
    
    <Grid 
          Background="#062949">

        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"
                    Margin="10">
            <Button x:Name="BAddEvent"
                    Click="BAddEvent_Click"
                    Content="Добавить"/>
            <Button x:Name="BEdit"
                    Click="BEdit_Click"
                    Margin="5,0"
                    Content="Изменить"/>
           
            <TextBox x:Name="TBSearch"
                     VerticalAlignment="Center"
                     Foreground="White"
                     FontSize="18"
                     Padding="10, 5"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="Найти мероприятие"
                     TextChanged="TBSearch_TextChanged">
                
            </TextBox>
        </StackPanel>
        <ScrollViewer Grid.Row="1"
                      Margin="5">
            <ListView x:Name="LVEvents"
                  Grid.Row="1">
                <ListView.ItemTemplate>
                    <DataTemplate>

                        <StackPanel>
                            
                            <TextBlock FontSize="28"
                                       
                                Text="{Binding Name}"/>
                            <TextBlock Text="{Binding City, StringFormat='Город: {0}'}"/>

                            <TextBlock Text="{Binding Description}"
                                       TextWrapping="Wrap"
                                       />
                            <TextBlock Text="{Binding StatusEvent.Name}"
                                        />
                            <TextBlock Text="{Binding CommentModerator, StringFormat='Комментарий: {0}'}"
                                        />
                            <Expander Header="Заявки" 
                                      >
                                <Expander.Background>
                                    <LinearGradientBrush>
                                        
                                    </LinearGradientBrush>
                                </Expander.Background>
                                <TabControl>
                                    <TabItem Header="Все">
                                        <DataGrid x:Name="DGExecutors"
                                      ItemsSource="{Binding EventExecutor}"
                                      IsReadOnly="True"
                                      AutoGenerateColumns="False"
                                      MouseDoubleClick="DGExecutors_MouseDoubleClick">
                                            <DataGrid.Columns>
                                                <DataGridTemplateColumn>
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Border CornerRadius="20"
                                                        Width="50"
                                                        Height="50">
                                                                <Border.Background>
                                                                    <ImageBrush ImageSource="{Binding Executor.Avatar}"
                                                                    RenderOptions.BitmapScalingMode="Fant"
                                                                    Stretch="Fill"/>
                                                                </Border.Background>
                                                            </Border>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTextColumn Header="ФИО"
                                                        Binding="{Binding Executor.FullName}"/>
                                                <DataGridTextColumn Header="Статус"
                                                        Binding="{Binding StatusExecutor.Name}"/>
                                                <DataGridTemplateColumn Header="Рейтинг">
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <materialDesign:RatingBar
                                                                
Foreground="Gold"
Orientation="Horizontal"
                                                                IsReadOnly="True"
Value="{Binding Executor.MediumRating}" />
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTemplateColumn>
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel Orientation="Horizontal">
                                                                <Button x:Name="BHire"
                                                            Click="BHire_Click"
                                                            Margin="5,0"
                                                            Content="Нанять"/>
                                                                <Button x:Name="BRefusal"
                                                            Click="BRefusal_Click"
                                                            Content="Отказать"/>
                                                            </StackPanel>

                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </TabItem>
                                    <TabItem Header="Принятые">
                                        <DataGrid
          ItemsSource="{Binding HitEventExecutor}"
          IsReadOnly="True"
          AutoGenerateColumns="False"
          MouseDoubleClick="DGExecutors_MouseDoubleClick">
                                            <DataGrid.Columns>
                                                <DataGridTemplateColumn>
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <Border CornerRadius="20"
                            Width="50"
                            Height="50">
                                                                <Border.Background>
                                                                    <ImageBrush ImageSource="{Binding Executor.Avatar}"
                                        RenderOptions.BitmapScalingMode="Fant"
                                        Stretch="Fill"/>
                                                                </Border.Background>
                                                            </Border>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                                <DataGridTextColumn Header="ФИО"
                            Binding="{Binding Executor.FullName}"/>


                                                <DataGridTemplateColumn>
                                                    <DataGridTemplateColumn.CellTemplate>
                                                        <DataTemplate>
                                                            <StackPanel>
                                                            
                                                            </StackPanel>
                                                        </DataTemplate>
                                                    </DataGridTemplateColumn.CellTemplate>
                                                </DataGridTemplateColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </TabItem>
                                </TabControl>
                            </Expander>
                            <Expander Header="Файлы">
                                <Expander.Background>
                                    <LinearGradientBrush>

                                    </LinearGradientBrush>
                                </Expander.Background>
                                <DataGrid AutoGenerateColumns="False"
                                      IsReadOnly="True"
                                      ItemsSource="{Binding MaterialEvent}">
                                    <DataGrid.Columns>
                                        <DataGridTemplateColumn>
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <Border CornerRadius="20"
                                                    HorizontalAlignment="Left"
                                                    Margin="3"
                                                    Width="50"
                                                    Height="50"
                                                    BorderThickness="2"
                                                  >
                                                        <Border.Background>
                                                            <ImageBrush Stretch="Fill"
                                                        RenderOptions.BitmapScalingMode="Fant"
                                                        ImageSource="{Binding Executor.Avatar}"/>
                                                        </Border.Background>
                                                    </Border>

                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>
                                        <DataGridTextColumn Header="ФИО"
                                                        Binding="{Binding Executor.FullName}"/>
                                        <DataGridTextColumn Header="Дата отправки"
                                                        Binding="{Binding DateTimeSend, StringFormat='dd.MM.yyyy'}"/>


                                        <DataGridTemplateColumn Header="Файл">
                                            <DataGridTemplateColumn.CellTemplate>
                                                <DataTemplate>
                                                    <TextBlock>
                                                    
                                                <Hyperlink Click="BInstall_Click">
                                                    <TextBlock Text="{Binding NameFile}"/>
                                                </Hyperlink>
                                                </TextBlock>
                                                </DataTemplate>
                                            </DataGridTemplateColumn.CellTemplate>
                                        </DataGridTemplateColumn>


                                    </DataGrid.Columns>

                                </DataGrid>
                            </Expander>

                        </StackPanel>

                    </DataTemplate>
                </ListView.ItemTemplate>
                <ListView.ItemContainerStyle>
                    <Style TargetType="{x:Type ListViewItem}">
                        <Setter Property="Margin"
                            Value="10"/>
                        <Setter Property="Padding"
        Value="10"/>
                        <Setter Property="BorderBrush">
                            <Setter.Value>
                                <RadialGradientBrush>
                                    <GradientStop Color="#223d74" Offset="1.0"/>
                                    <GradientStop Color="#4362a1" Offset="0.0"/>
                                </RadialGradientBrush>
                            </Setter.Value>
                        </Setter>
                           
                        
                        <Setter Property="Background">
                            <Setter.Value>
                                <LinearGradientBrush>
                                    <GradientStop Color="#223d74" Offset="0.0"/>
                                    <GradientStop Color="#4362a1" Offset="1.0"/>
                                </LinearGradientBrush>
                            </Setter.Value>
                        </Setter>
                        <Setter Property="HorizontalContentAlignment"
                            Value="Stretch"/>
                        
                        <Style.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius"
        Value="10"/>

                            </Style>
                        </Style.Resources>

                    </Style>
                </ListView.ItemContainerStyle>
            </ListView>

        </ScrollViewer>
    </Grid>
</Page>
